{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "generate docs",
            "type": "shell",
            "command": "\"$APPDATA/Godot/app_userdata/Godot Version Manager/versions/Godot_v4.4-rc1_win64.exe\" --doctool ./src --gdextension-docs",
            "problemMatcher": []
        },
        {
            "label": "lint",
            "type": "shell",
            "command": "find src/ -iname '*.h' -o -iname '*.cpp' | xargs clang-format -i",
            "problemMatcher": []
        },
        {
            "label": "build",
            "group": "build",
            "type": "shell",
            "command": "scons",
            "args": [],
            "problemMatcher": "$msCompile"
        }
    ]
}